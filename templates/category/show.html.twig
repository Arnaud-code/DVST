{% extends "base.html.twig" %}

{% block title %}
	{{ category.name }}
{% endblock %}

{% block body %}
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a href="{{ path('homepage') }}">Accueil</a>
		</li>
		<li class="breadcrumb-item active">{{ category.name }}</li>
	</ol>
	<div class="container">
		<h1>{{ category.name }}</h1>
		<div class="row">
			{% for p in category.products %}
				<div class="col-12">
					{% include "category/_product_tile.html.twig" %}
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
