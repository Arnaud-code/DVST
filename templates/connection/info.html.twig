{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Connexion</h1>

		<div class="card">
			<div class="card-header">
				<h2>Compte</h2>
			</div>
			<div class="card-body">
				<p>Vous êtes connecté en tant que
					{{ app.user.fullName }}</p>
			</div>
		</div>
		<div class="d-flex mt-5" style="justify-content: space-around">
			<a href="{{ path('app_logout') }}" class="btn btn-primary">
				<i class="fas fa-sign-out-alt"></i>
				Déconnexion
			</a>
		</div>

	{% endblock %}
