{% extends 'base.html.twig' %}

{% block title %}Pression
{% endblock %}

{% block body %}
	<div class="container">

		<h1>Conditions</h1>

		{{ form_start(formView) }}

		{{ form_errors(formView) }}

		{{ form_row(formView.tire) }}
		{{ form_row(formView.driver) }}
		{{ form_row(formView.circuit) }}

		<button type="submit" class="btn btn-primary">
			<i class="fas fa-arrow-right"></i>
		</button>

		{{ form_end(formView) }}

		<h2>Enregistrements :</h2>


		{% if summaries %}

			<table class="table table-hover">
				<thead>
					<tr>
						<th scope="col">Pneu</th>
						<th scope="col">Pilote</th>
						<th scope="col">Circuit</th>
						<th scope="col"></th>
						<th scope="col"></th>
					</tr>
				</thead>
				<tbody>
					{% for summary in summaries %}
						<tr>
							<th scope="row">{{ summary.tire }}</th>
							<td>{{ summary.driver }}</td>
							<td>{{ summary.circuit }}</td>
							<td>({{ summary.counter }})</td>
							<td>
								<a href="{{ path('pressure_set-conditions', {'tire': summary.tire_id, 'driver': summary.driver_id, 'circuit': summary.circuit_id}) }}" class="btn btn-primary">
									<i class="fas fa-arrow-right"></i>
								</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		{% else %}
			<p>Aucun eregistrement</p>
		{% endif %}

	</div>

{% endblock %}
